
@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.LOINCCodesID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Lab: LOINC<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6">
            <div class="row">
                <label class="col-xs-12">Code Set: LOINC</label>
            </div>
            <div class="row" style="border-top:none;">
                <label class="col-xs-2">Selected Codes:</label>
                <div class="col-xs-8" style="padding-left: 20px;">
                    <textarea name="txtLOINCCodes" class="form-control" rows="3" data-bind="value:Values().CodeValues" title="&bull; separate multiple codes using a semi-colon" />
                    <div>
                        <label class="radio-online">
                            <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.ExactMatch, checked:Values().SearchMethodType, attr:{ required: $root.IsTemplateEdit == false, name: $parents[0].ID() + 'loinccodes_searchtype_' + $index() }" validationmessage="Select a search method type." /> Exact Match
                        </label>
                        &nbsp;
                        <label class="radio-online">
                            <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.StartsWith, checked:Values().SearchMethodType, attr:{ name: $parents[0].ID() + 'loinccodes_searchtype_' + $index() }" /> Starts With
                        </label>
                    </div>

                </div>
            </div>
            <div class="row form-group" style="border-top:none;">
                <label class="col-xs-3">Result Range:</label>
                <div class="col-xs-3" style="padding-left: 0px;">
                    <label id="lblResultRangeMin" for="neResultRangeMin">Min</label>
                    <input id="neResultRangeMin" name="ResultRangeMin" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().ResultRangeMin, min: 1, max: 150, decimals: 2, format: 'n2'}" min="1" max="150" style="width: 100px;">
                </div>
                <div class="col-xs-3">
                    <label id="lblResultRangeMax" for="neResultRangeMax">Max</label>
                    <input id="neResultRangeMax" name="ResultRangeax" type="number" maxlength="6" data-bind="kendoNumericTextBox: {value: Values().ResultRangeMax, min: 1, max: 150, decimals: 2, format: 'n2'}" min="1" max="150" style="width: 100px;">
                </div>
            </div>
            <div class="row form-group" style="border-top:none;">
                <label class="col-xs-3" id="lblQualitativeResult" for="cboQualitativeResult">Qualitative Result:</label>
                <input type="text" aria-labelledby="lblQualitativeResult" id="cboQualitativeResult" name="QualitativeResult" data-bind="kendoDropDownList: {value: Values().QualitativeResult, dataSource: Dns.Enums.LOINCQualitativeResultTypeTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' }" style="width: 250px;" />
            </div>
            <div class="row form-group" style="border-top:none;">
                <label class="col-xs-3" id="lblQualitativeModifier" for="cboQualitativeModifier">Result Modifier:</label>
                <input type="text" aria-labelledby="lblQualitativeModifier" id="cboQualitativeModifier" name="QualitativeModifier" data-bind="kendoDropDownList: {value: Values().ResultModifier, dataSource: Dns.Enums.LOINCResultModifierTypeTranslation, dataTextField: 'text', dataValueField: 'value', optionLabel:'<Not Selected>' }" style="width: 250px;" />
            </div>
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteloinc" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>
