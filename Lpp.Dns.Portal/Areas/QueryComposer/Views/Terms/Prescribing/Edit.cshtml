@using Lpp.QueryComposer

<script type="text/html" id="e_@ModelTermsFactory.PrescribingID">
    <p class="bold center operator" data-bind="text:Global.Helpers.GetEnumString(Dns.Enums.QueryComposerOperatorsTranslation, Operator()), visible:$index() > 0"></p>
    <div class="row row-noborder">
        <div class="col-sm-2 bold"><h4 class="TermHeader bold">Prescribing<em data-bind="visible:Design.Locked" style="color:red">*</em></h4></div>
        <div class="col-sm-6">
            <div class="row">
                <label class="col-xs-3">Code Set:</label>
                <div class="col-xs-5" data-bind="css:{ 'col-xs-4': (Values() != null && Values().CodeType() != null && Values().CodeType() == Dns.Enums.ProcedureCode.ICD9)  }">
                    <span>RxNorm CUI</span>
                </div>
            </div>
            <div class="row" style="border-top:none;">
            </div>
            <div class="row" style="border-top:none;">
                <label class="col-xs-3">Selected Codes:</label>
                <div class="col-xs-9">
                    <textarea name="txtPerscribingCodes" class="form-control" rows="3" data-bind="value:Values().CodeValues" title="&bull; separate multiple codes using a semi-colon" />

                    <div>
                        <label class="radio-online">
                            <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.ExactMatch, checked:Values().SearchMethodType, attr:{ required: $root.IsTemplateEdit == false, name: $parents[0].ID() + 'perscribingcodes_searchtype_' + $index() }" validationmessage="Select a search method type." /> Exact Match
                        </label>
                        &nbsp;
                        <label class="radio-online">
                            <input type="radio" data-bind="value: Dns.Enums.TextSearchMethodType.StartsWith, checked:Values().SearchMethodType, attr:{ name: $parents[0].ID() + 'perscribingcodes_searchtype_' + $index() }" /> Starts With
                        </label>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-sm-2" data-bind="visible: $root.IsTemplateEdit">
            <input type="checkbox" data-bind="checked: Design.Locked" />
            <span>Locked</span>
        </div>
        <div class="col-sm-2">
            <button id="btnDeleteperscribing" class="btn btn-danger pull-right" data-bind="click: function(data, event) { $root.DeleteTerm(data, $parent, event);}, visible: $root.IsTemplateEdit || !Design.Locked()"><span class="glyphicon glyphicon-minus"></span> Remove</button>
        </div>
    </div>
</script>
