@{
    Layout = "~/Views/_DialogLayout.cshtml";
}

<script src="~/js/dialogs/EditRoutingStatus.js"></script>


<section id="EditRoutingStatusDialog">
    <article>
        <table class="table table-stripped table-bordered table-hover">
            <colgroup>
                <col style="width: 30px;" />
                <col style="width: 170px;" />
                <col style="width: 180px;" />
                <col style="width: 180px;" />
                <col />
            </colgroup>
            <thead>
                <tr>
                    <td><a href="#" class="glyphicon glyphicon-ok" style="text-decoration: none; color: black;"></a></td>
                    <td>Name</td>
                    <td>Current Routing Status</td>
                    <td>New Routing Status</td>
                    <td>Message</td>
                </tr>
            </thead>
            <tbody data-bind="foreach: RoutingsToChange">
                <tr>
                    <td><input type="checkbox" data-bind="value: 'true', checked:Selected " /></td>
                    <td data-bind="text: DataMartName"></td>
                    <td data-bind="text: Global.Helpers.GetEnumString(Dns.Enums.RoutingStatusTranslation, OriginalStatus)"></td>
                    <td>
                        <input data-bind=" kendoDropDownList: { enabled:Selected, value: NewStatus, data: $root.ChangeStatusList, dataTextField: 'Status', dataValueField: 'ID', optionLabel: { Status: '<not specified>', ID: '' }}">
                    </td>
                    <td>
                        <input class="form-control" data-bind="value: Message, enable:Selected">
                    </td>
                </tr>
            </tbody>
        </table>
        <nav style="margin:15px 0px;">
            <button class="btn btn-default pull-right" data-bind="click: onCancel" style="margin-right:15px; width:100px;">Cancel</button>
            <button class="btn btn-default pull-right" data-bind="click: onContinue" style="margin-right:15px; width:100px;">Continue</button>
        </nav>
    </article>
</section>


